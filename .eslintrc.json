{
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true
		}
	},
	"env": {
		"node": true,
		"es6": true
	},
	"extends": ["eslint:recommended"],
	"rules": {
		"no-console": "off",
		"no-var": "warn",
		"eqeqeq": "warn",
		"semi": ["warn", "always"],
		"no-spaced-func": "warn",
		"comma-style": "warn",
		"comma-spacing": "warn",
		"key-spacing": "warn"
	}
}
